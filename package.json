{
  "name": "@xeho91/colors",
  "version": "2.1.0",
  "description": "xeho91's brand colors",
  "keywords": [
    "colors",
    "brand",
    "assets",
    "automation",
    "CSS",
    "JSON"
  ],
  "author": "Mateusz Kadlubowski <xeho91@pm.me> (https://xeho91.site/)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xeho91/colors.git"
  },
  "bugs": {
    "url": "https://github.com/xeho91/xeho91/issues"
  },
  "homepage": "https://github.com/xeho91/colors#readme",
  "files": [
    "/dist"
  ],
  "main": "index.js",
  "style": "/dist/colors.css",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "scripts": {
    "build": "run-p create:*",
    "build:css:files": "node \"./scripts/build.js\" css",
    "build:css:postcss": "postcss \"./source/colors.css\" --output \"./dist/colors.css\" --use postcss-import --verbose",
    "create:css": "run-s build:css:*",
    "create:json": "node \"./scripts/build.js\" json"
  },
  "devDependencies": {
    "fs-extra": "^9.1.0",
    "khroma": "^1.3.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.2.8",
    "postcss-cli": "^8.3.1",
    "postcss-import": "^14.0.0"
  }
}
